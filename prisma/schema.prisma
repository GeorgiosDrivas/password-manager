generator client {
  provider        = "prisma-client"
  output          = "../generated/prisma"
  engineType      = "client"
  previewFeatures = ["queryCompiler", "driverAdapters"] // <-- add driverAdapters
}


datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  username String
  password String @unique
  items    Item[] @relation("UserItems")
}

model Item {
  id       Int     @id @default(autoincrement())
  title    String
  username String
  password String
  url      String
  userId   Int
  user     User    @relation("UserItems", fields: [userId], references: [id])
}
